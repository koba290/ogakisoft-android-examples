<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:orientation="vertical">

	<TextView android:id="@+id/text_top" android:text="top"
		android:gravity="center_horizontal" android:background="#FFFF0000"
		android:padding="3dip" android:textSize="30dip" android:layout_width="fill_parent"
		android:layout_height="wrap_content" />

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView android:id="@+id/text_left" android:text="left"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:background="#FF00F000" android:padding="3dip"
			android:textSize="30dip" />

		<TextView android:id="@+id/text_center" android:text="center"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:background="#FF00A000" android:padding="3dip"
			android:textSize="30dip" />

		<TextView android:id="@+id/text_right" android:text="right"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:background="#FF00F0FF" android:padding="3dip"
			android:textSize="30dip" />

	</LinearLayout>

	<TextView android:id="@+id/text_bottom" android:text="bottom"
		android:layout_span="3" android:gravity="center_horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:background="#FF0000FF" android:padding="3dip"
		android:textSize="30dip" />

</LinearLayout>
